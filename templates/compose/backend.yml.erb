version: '3.6'

services:
  db:
    image: mysql:5.7
    networks:
      - backend-net
    configs:
      - source: mysql_config
        target: /etc/mysql/conf.d/innodb.cnf
    volumes:
      - db_data:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: djtdjtdjtdjt
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    networks:
      - backend-net
      - proxy-net
    depends_on:
      - db
    environment:
      PMA_HOST: db
      PMA_USER: root
      PMA_PASSWORD: djtdjtdjtdjt
      PHP_UPLOAD_MAX_FILESIZE: 1G
      PHP_MAX_INPUT_VARS: 1G
    deploy:
      labels:
        traefik.enable: 'true'
        traefik.frontend.rule: 'Host: pma.<%= @config['app']['domain'] %>'
        traefik.docker.network: proxy-net
        traefik.port: 80

  redis:
    image: bitnami/redis:4.0.14-ol-7-r33
    environment:
      REDIS_REPLICATION_MODE: 'master'
      REDIS_PASSWORD: 'djtdjtdjtdjt'
    networks:
      - backend-net
      - proxy-net
    volumes:
      - redis_data:/bitnami/redis/data

  rabbitmq:
    image: rabbitmq:3.7.6-management
    networks:
      - backend-net
      - proxy-net
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq
    deploy:
      labels:
        traefik.enable: 'true'
        traefik.frontend.rule: 'Host: rabbitmq.<%= @config['app']['domain'] %>'
        traefik.docker.network: proxy-net
        traefik.port: 15672

  vault:
    image: vault
    networks:
      - backend-net
      - proxy-net
    environment:
      SKIP_SETCAP: 1
      VAULT_ADDR: http://vault:8200
      VAULT_API_ADDR: http://vault:8200
    configs:
      - source: vault_config
        target: /vault/config/local.json
    entrypoint: vault server -config=/vault/config/local.json
    deploy:
      labels:
        traefik.enable: 'true'
        traefik.frontend.rule: 'Host: vault.<%= @config['app']['domain'] %>'
        traefik.docker.network: proxy-net
        traefik.port: 8200

  influxdb:
    image: influxdb:1.7.8
    networks:
      - backend-net
    environment:
      INFLUXDB_ADMIN_ENABLED: "true"
    configs:
      - source: influxdb_build_candles
        target: /build_candles.sql
      - source: influxdb_config
        target: /influxdb.sql
    volumes:
      - influxdb_data:/var/lib/influxdb

volumes:
  db_data:
    driver: "local"
    driver_opts:
      type: "nfs4"
      o: "addr=<%= @config['app']['manager_ip'] %>,nolock,soft,rw"
      device: ":/data/db"

  rabbitmq_data:
    driver: "local"
    driver_opts:
      type: "nfs4"
      o: "addr=<%= @config['app']['manager_ip'] %>,nolock,soft,rw"
      device: ":/data/rabbitmq"

  redis_data:
    driver: "local"
    driver_opts:
      type: "nfs4"
      o: "addr=<%= @config['app']['manager_ip'] %>,nolock,soft,rw"
      device: ":/data/redis"

  influxdb_data:
    driver: "local"
    driver_opts:
      type: "nfs4"
      o: "addr=<%= @config['app']['manager_ip'] %>,nolock,soft,rw"
      device: ":/data/influxdb"

configs:
  mysql_config:
    file: ../config/mysql/innodb.cnf
  vault_config:
    file: ../config/vault/config.json
  influxdb_config:
    file: ../config/influxdb/influxdb.sql
  influxdb_build_candles:
    file: ../config/influxdb/build_candles.sql


networks:
  backend-net:
    driver: overlay
    name: backend-net
    attachable: true
  proxy-net:
    external: true
